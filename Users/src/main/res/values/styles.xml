<resources>

    <style name="ZenPets" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_pattern</item>
        <!--<item name="android:windowBackground">@color/app_bg</item>-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- CARD VIEW STYLE -->
        <item name="cardStyle">@style/ZenPetsCards</item>

        <!-- CALLIGRAPHY ATTRIBUTE -->
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->

        <!-- POPUP MENU STYLE -->
        <item name="popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_pattern</item>
        <!--<item name="android:windowBackground">@color/app_bg</item>-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- CALLIGRAPHY ATTRIBUTE -->
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FloatingTextInput" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- CARD VIEW STYLE -->
    <attr name="cardStyle" format="reference" />

    <style name="ZenPetsCards" parent="CardView">
        <item name="cardBackgroundColor">@color/card_bg</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="ZenPets.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ZenPets.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="ZenPetsDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_pattern</item>
        <!--<item name="android:windowBackground">@color/app_bg</item>-->
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- POPUP MENU STYLE -->
    <style name="myPopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#444444</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">#D9D9D9</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="chat_text_message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="chat_timings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#a6abad</item>
    </style>

    <!-- THE TEXT INPUT LAYOUT STYLE -->
    <style name="TextLabel" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <!-- THE CONDENSED NORMAL STYLE -->
    <style name="CondensedNormal" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- THE CONDENSED BOLD STYLE -->
    <style name="CondensedBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- THE LIGHT NORMAL STYLE -->
    <style name="LightNormal" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- THE LIGHT BOLD STYLE -->
    <style name="LightBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>
</resources>