<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linlaIncoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/balloon_incoming_normal"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtIncomingMessage"
            style="@style/chat_text_message_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:paddingEnd="0dp"
            android:paddingLeft="6dp"
            android:paddingRight="0dp"
            android:paddingStart="6dp"
            android:text="Rahul Agrawal is a good boy but he does not know what he wants." />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtIncomingTimeStamp"
            style="@style/chat_timings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:paddingEnd="5dp"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:paddingStart="0dp"
            android:text="11:15 PM" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlaOutgoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/balloon_outgoing_normal"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtOutgoingMessage"
            style="@style/chat_text_message_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:paddingEnd="0dp"
            android:paddingLeft="6dp"
            android:paddingRight="0dp"
            android:paddingStart="6dp"
            android:text="Rahul Agrawal is a good boy but he does not know what he wants." />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtOutgoingTimeStamp"
            style="@style/chat_timings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:paddingEnd="5dp"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:paddingStart="0dp"
            android:text="11:15 PM" />
    </LinearLayout>
</LinearLayout>