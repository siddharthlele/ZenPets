<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_history_menu_bottom"
    style="?attr/bottomSheetStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="start|center"
        android:padding="11dp"
        android:text="ADD AN IMAGE"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/linlaGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="11dp">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:adjustViewBounds="true"
            android:padding="11dp"
            app:iiv_color="@android:color/secondary_text_light"
            app:iiv_icon="gmd-photo-camera"
            app:iiv_size="20dp" />

        <android.support.v7.widget.AppCompatTextView
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:text="Choose from photo gallery"
            android:textColor="@android:color/primary_text_light"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlaCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="11dp">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:adjustViewBounds="true"
            android:padding="11dp"
            app:iiv_color="@android:color/secondary_text_light"
            app:iiv_icon="gmd-photo"
            app:iiv_size="20dp" />

        <android.support.v7.widget.AppCompatTextView
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:text="Take a photo"
            android:textColor="@android:color/primary_text_light"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>