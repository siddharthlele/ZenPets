<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/zen_toolbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:padding="11dp"
                    android:text="SORT BY"
                    android:textColor="?android:textColorTertiary"
                    android:textSize="15sp" />

                <co.ceryle.segmentedbutton.SegmentedButtonGroup
                    android:id="@+id/groupSortBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:sbg_backgroundColor="@color/card_bg"
                    app:sbg_dividerBackgroundDrawable="@drawable/fixed_divider_horizontal_bright"
                    app:sbg_dividerPadding="10dp"
                    app:sbg_dividerRadius="10dp"
                    app:sbg_dividerSize="1dp"
                    app:sbg_position="0"
                    app:sbg_radius="2dp"
                    app:sbg_selectorColor="@color/primary"
                    app:sbg_selectorTextColor="?android:textColorPrimary">

                    <co.ceryle.segmentedbutton.SegmentedButton
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="Consultation Fee"
                        android:textSize="15sp" />

                    <co.ceryle.segmentedbutton.SegmentedButton
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="Recommendations"
                        android:textSize="15sp" />
                </co.ceryle.segmentedbutton.SegmentedButtonGroup>

                <android.support.v7.widget.AppCompatTextView
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:padding="11dp"
                    android:text="SHOW ONLY"
                    android:textColor="?android:textColorTertiary"
                    android:textSize="15sp" />

                <!--<LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        fontPath="fonts/Roboto-Regular.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:padding="11dp"
                        android:text="Doctor Available Today"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="14sp" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switchAvailableToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>-->

                <android.support.v7.widget.AppCompatTextView
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:padding="11dp"
                    android:text="Consultation Fee (â‚¹)"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="14sp" />

                <co.ceryle.segmentedbutton.SegmentedButtonGroup
                    android:id="@+id/groupConsultationFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:sbg_backgroundColor="@color/card_bg"
                    app:sbg_dividerBackgroundDrawable="@drawable/fixed_divider_horizontal_bright"
                    app:sbg_dividerPadding="10dp"
                    app:sbg_dividerRadius="10dp"
                    app:sbg_dividerSize="1dp"
                    app:sbg_position="-0"
                    app:sbg_radius="2dp"
                    app:sbg_selectorColor="@color/primary"
                    app:sbg_selectorTextColor="?android:textColorPrimary">

                    <co.ceryle.segmentedbutton.SegmentedButton
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="Free"
                        android:textSize="12sp" />

                    <co.ceryle.segmentedbutton.SegmentedButton
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="1 - 200"
                        android:textSize="12sp" />

                    <co.ceryle.segmentedbutton.SegmentedButton
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="201 - 500"
                        android:textSize="12sp" />

                    <co.ceryle.segmentedbutton.SegmentedButton
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="> 500"
                        android:textSize="12sp" />
                </co.ceryle.segmentedbutton.SegmentedButtonGroup>

                <android.support.v7.widget.AppCompatTextView
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:padding="11dp"
                    android:text="Type"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="14sp" />

                <co.ceryle.segmentedbutton.SegmentedButtonGroup
                    android:id="@+id/groupType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:sbg_backgroundColor="@color/card_bg"
                    app:sbg_dividerBackgroundDrawable="@drawable/fixed_divider_horizontal_bright"
                    app:sbg_dividerPadding="10dp"
                    app:sbg_dividerRadius="10dp"
                    app:sbg_dividerSize="1dp"
                    app:sbg_position="0"
                    app:sbg_radius="2dp"
                    app:sbg_selectorColor="@color/primary"
                    app:sbg_selectorTextColor="?android:textColorPrimary">

                    <co.ceryle.segmentedbutton.SegmentedButton
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="Book"
                        android:textSize="15sp" />

                    <co.ceryle.segmentedbutton.SegmentedButton
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="Call"
                        android:textSize="15sp" />
                </co.ceryle.segmentedbutton.SegmentedButtonGroup>

                <android.support.v7.widget.AppCompatTextView
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:padding="11dp"
                    android:text="Gender"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="14sp" />

                <co.ceryle.segmentedbutton.SegmentedButtonGroup
                    android:id="@+id/groupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:sbg_backgroundColor="@color/card_bg"
                    app:sbg_dividerBackgroundDrawable="@drawable/fixed_divider_horizontal_bright"
                    app:sbg_dividerPadding="10dp"
                    app:sbg_dividerRadius="10dp"
                    app:sbg_dividerSize="1dp"
                    app:sbg_position="0"
                    app:sbg_radius="2dp"
                    app:sbg_selectorColor="@color/primary"
                    app:sbg_selectorTextColor="?android:textColorPrimary">

                    <co.ceryle.segmentedbutton.SegmentedButton
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="Male"
                        android:textSize="15sp" />

                    <co.ceryle.segmentedbutton.SegmentedButton
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="Female"
                        android:textSize="15sp" />
                </co.ceryle.segmentedbutton.SegmentedButtonGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>