<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/the_toolbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbarSize="3dp"
        android:scrollbarThumbVertical="@color/primary_dark">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-MdCn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="11dp"
                android:text="@string/sign_up_title"
                android:textColor="@android:color/primary_text_light"
                android:textSize="18sp" />

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-LtCn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="4dp"
                android:text="@string/sign_up_sub_title"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputEmailAddress"
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtEmailAddress"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="start|center"
                    android:hint="@string/sign_up_email_address_hint"
                    android:inputType="textEmailAddress"
                    android:padding="11dp"
                    android:text="siddharth.lele@gmail.com"
                    android:textColor="@android:color/primary_text_light"
                    android:textColorHint="@android:color/tertiary_text_light"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputPassword"
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:passwordToggleEnabled="true">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtPassword"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:hint="@string/sign_up_password_hint"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:text="12345678"
                    android:textColor="@android:color/primary_text_light"
                    android:textColorHint="@android:color/secondary_text_light"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputConfirmPassword"
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:passwordToggleEnabled="true">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtConfirmPassword"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginBottom="5dp"
                    android:gravity="start|center"
                    android:hint="@string/sign_up_confirm_password_hint"
                    android:inputType="textPassword"
                    android:padding="11dp"
                    android:text="12345678"
                    android:textColor="@android:color/primary_text_light"
                    android:textColorHint="@android:color/tertiary_text_light"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputFullName"
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtFullName"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginBottom="5dp"
                    android:gravity="start|center"
                    android:hint="@string/sign_up_full_name"
                    android:text="Siddharth Lele"
                    android:inputType="textCapWords"
                    android:padding="11dp"
                    android:textColor="@android:color/primary_text_light"
                    android:textColorHint="@android:color/tertiary_text_light"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/linlaPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:adjustViewBounds="true"
                    app:iiv_color="@android:color/secondary_text_light"
                    app:iiv_icon="faw-phone"
                    app:iiv_size="18dp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtPhonePrefix"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/sign_up_prefix_hint"
                    android:inputType="phone"
                    android:maxLength="4"
                    android:text="91"
                    android:padding="11dp"
                    android:textColor="@android:color/primary_text_light"
                    android:textColorHint="@android:color/tertiary_text_light"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0.50dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#CC999999" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edtPhoneNumber"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8087471157"
                    android:gravity="start|center"
                    android:hint="@string/sign_up_phone_number_hint"
                    android:inputType="phone"
                    android:padding="11dp"
                    android:textColor="@android:color/primary_text_light"
                    android:textColorHint="@android:color/tertiary_text_light"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlaGender"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:adjustViewBounds="true"
                    app:iiv_color="@android:color/secondary_text_light"
                    app:iiv_icon="faw-venus-mars"
                    app:iiv_size="18dp" />

                <co.ceryle.segmentedbutton.SegmentedButtonGroup
                    android:id="@+id/groupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:sbg_backgroundColor="@color/card_bg"
                    app:sbg_dividerBackgroundDrawable="@android:drawable/divider_horizontal_bright"
                    app:sbg_dividerPadding="10dp"
                    app:sbg_dividerRadius="10dp"
                    app:sbg_dividerSize="1dp"
                    app:sbg_position="0"
                    app:sbg_radius="2dp"
                    app:sbg_ripple="false"
                    app:sbg_selectorColor="@color/primary"
                    app:sbg_selectorTextColor="@android:color/primary_text_light">

                    <co.ceryle.segmentedbutton.SegmentedButton
                        android:id="@+id/btnMale"
                        fontPath="fonts/HelveticaNeueLTW1G-LtCn.otf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="@string/sign_up_male" />

                    <co.ceryle.segmentedbutton.SegmentedButton
                        android:id="@+id/btnFemale"
                        fontPath="fonts/HelveticaNeueLTW1G-LtCn.otf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="@string/sign_up_female" />
                </co.ceryle.segmentedbutton.SegmentedButtonGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlaDOB"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:adjustViewBounds="true"
                    app:iiv_color="@android:color/secondary_text_light"
                    app:iiv_icon="faw-birthday-cake"
                    app:iiv_size="18dp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtDOB"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:gravity="start|center"
                    android:padding="11dp"
                    android:text="@string/sign_up_date_of_birth"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp" />

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/imgvwSelectDOB"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    app:iiv_color="@android:color/tertiary_text_light"
                    app:iiv_icon="faw-sort-desc"
                    app:iiv_size="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlaCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="top|center"
                android:orientation="horizontal">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:adjustViewBounds="true"
                    app:iiv_color="@android:color/secondary_text_light"
                    app:iiv_icon="faw-map-marker"
                    app:iiv_size="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start|center"
                        android:padding="11dp"
                        android:text="@string/sign_up_select_country"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="15sp" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spnCountry"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <android.support.v7.widget.AppCompatTextView
                        fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start|center"
                        android:padding="11dp"
                        android:text="@string/sign_up_select_state"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="15sp" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spnState"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <android.support.v7.widget.AppCompatTextView
                        fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start|center"
                        android:padding="11dp"
                        android:text="@string/sign_up_select_city"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="15sp" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spnCity"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:padding="11dp"
                android:text="@string/sign_up_profile_picture"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp" />

            <android.support.v7.widget.CardView
                style="@style/ZenPetsCards"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgvwProfilePicture"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@drawable/empty_camera" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtTermsOfService"
        fontPath="fonts/HelveticaNeueLTW1G-LtCn.otf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:padding="11dp"
        android:text="@string/sign_up_full_terms"
        android:textColor="@android:color/black"
        android:textColorLink="@color/accent"
        android:textSize="15sp" />
</LinearLayout>